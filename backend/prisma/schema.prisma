generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  username String
  password String
  videos   Video[]
  channels Channel?
}

model Video {
  id            String   @id @default(cuid())
  title         String
  thumbnail_url String?
  video_urls    Json
  view_count    Int      @default(value: 0)
  description   String
  category      String
  duration      String?
  timeStamp     String?
  created_at    DateTime @default(now())
  channelId     String
  channel       Channel  @relation(fields: [channelId], references: [id])
  creatorId     String
  creator       User     @relation(fields: [creatorId], references: [id])
}

model Channel {
  id               String  @id @default(cuid())
  name             String
  description      String
  subscriber_count Int     @default(value: 0)
  slug             String  @unique
  videos           Video[]
  creatorId        String  @unique
  creator          User    @relation(fields: [creatorId], references: [id])
}
